// Helper function to get nested translation keys
export const getNestedTranslation = (obj, path) => {
  if (!path) return undefined;
  return path.split('.').reduce((current, key) => current?.[key], obj);
};

// Cache in memoria per traduzioni AI
const aiCache = new Map();

// Enhanced rate limiting with longer cooldowns
let aiCooldownUntil = 0;
let lastLLMCall = 0;
const MIN_INTERVAL_MS = 800; // Increased from 450ms
const COOLDOWN_ON_ERROR_MS = 30000; // 30 second cooldown on rate limit
const COOLDOWN_ON_QUOTA_MS = 60 * 60 * 1000; // 1 hour cooldown when monthly quota/limit is reached
const pendingTranslations = new Map();

const simpleHash = (str) => {
  let hash = 5381;
  for (let i = 0; i < (str || "").length; i++) {
    hash = ((hash << 5) + hash) + str.charCodeAt(i);
  }
  return (hash >>> 0).toString(36);
};

// Sanitize LLM output (remove wrapping quotes/backticks/triple quotes)
const sanitizeLLMOutput = (text) => {
  if (!text || typeof text !== "string") return text;
  let s = text.trim();

  // Remove wrapping triple quotes """..."""
  if (s.startsWith('"""') && s.endsWith('"""')) {
    s = s.slice(3, -3).trim();
  }
  // Remove wrapping markdown fences ```...```
  if (s.startsWith("```") && s.endsWith("```")) {
    const firstLineBreak = s.indexOf("\n");
    if (firstLineBreak !== -1) {
      s = s.slice(firstLineBreak + 1, -3).trim();
    } else {
      s = s.replace(/^```[a-zA-Z-]*\s*|```$/g, "").trim();
    }
  }
  // Remove simple wrapping quotes "..." or '...'
  if ((s.startsWith('"') && s.endsWith('"')) || (s.startsWith("'") && s.endsWith("'"))) {
    s = s.slice(1, -1).trim();
  }
  return s;
};

async function applyRateLimit() {
  const now = Date.now();
  if (now < aiCooldownUntil) {
    // In cooldown: throw error to stop translation attempts
    throw new Error("AI translation in cooldown, please wait");
  }
  const elapsed = now - lastLLMCall;
  if (elapsed < MIN_INTERVAL_MS) {
    await new Promise((r) => setTimeout(r, MIN_INTERVAL_MS - elapsed));
  }
  lastLLMCall = Date.now();
  return true;
}

// Traduzione AI con cache locale + entity + throttling + de-dup
export async function translateWithAI(text, targetLang, scope = "global") {
  if (!text || typeof text !== "string") return text;
  if (!targetLang || targetLang === "it") return text; // Italiano come base di default
  if (text.trim().length <= 1) return text;

  const key = `${simpleHash(text)}|${targetLang}|${scope}`;
  if (aiCache.has(key)) {
    return aiCache.get(key);
  }

  // De-duplicate concurrent calls for the same key
  if (pendingTranslations.has(key)) {
    try {
      return await pendingTranslations.get(key);
    } catch {
      return text;
    }
  }

  const doTranslate = (async () => {
    // Try DB cache first
    try {
      // Assuming base44.entities.Translation and base44.integrations.Core exist in the environment
      // and are correctly configured to interact with a backend or API.
      // If `base44` is not defined in the scope where this function runs,
      // this part will throw a ReferenceError.
      const existing = await base44.entities.Translation.filter({ key });
      if (existing && existing.length > 0) {
        const translated = sanitizeLLMOutput(existing[0].translated_text);
        aiCache.set(key, translated);
        return translated;
      }
    } catch (dbError) {
      // Log DB error but don't prevent translation attempt
      console.warn("DB cache lookup failed:", dbError.message);
    }

    // Rate limit check
    try {
      await applyRateLimit();
    } catch (e) {
      // In cooldown, return original text
      aiCache.set(key, text);
      return text;
    }

    const prompt = `You are a translation engine. Translate the following text to language code "${targetLang}".
- Detect source language automatically
- Preserve formatting, line breaks, punctuation
- Return ONLY the translated text without quotes or wrapping
- Do not add notes or explanations

TEXT:
${text}`;

    try {
      const res = await base44.integrations.Core.InvokeLLM({
        prompt,
        response_json_schema: {
          type: "object",
          properties: { translated_text: { type: "string" } },
          required: ["translated_text"]
        }
      });

      const translatedRaw = res?.translated_text || text;
      const translated = sanitizeLLMOutput(translatedRaw);
      aiCache.set(key, translated);

      // Best-effort save to DB
      try {
        await base44.entities.Translation.create({
          key,
          source_text: text,
          target_lang: targetLang,
          translated_text: translated,
          scope,
          last_used_date: new Date().toISOString()
        });
      } catch (persistenceError) {
        // Use warn, do not escalate to app error
        console.warn("Translation persistence failed:", persistenceError?.message || persistenceError);
      }

      return translated;
    } catch (e) {
      const message = (e && (e.message || e.toString())) || "";

      // Treat quota/plan limits as long cooldown to avoid repeated failures
      const isRateLimit = message.toLowerCase().includes("rate limit") || message.includes("429");
      const isQuotaLimit = message.toLowerCase().includes("limit of integrations") || message.toLowerCase().includes("upgrade your plan") || message.toLowerCase().includes("quota");

      if (isRateLimit) {
        aiCooldownUntil = Date.now() + COOLDOWN_ON_ERROR_MS;
        console.warn("AI rate limit hit. Short cooldown initiated.");
      } else if (isQuotaLimit) {
        aiCooldownUntil = Date.now() + COOLDOWN_ON_QUOTA_MS;
        console.warn("AI quota/plan limit hit. Extended cooldown initiated.");
      } else {
        // Downgrade to warn to avoid surfacing as app error
        console.warn("AI translation failed for text (fallback to original):", text, message);
      }

      // Fallback to original text
      aiCache.set(key, text);
      return text;
    }
  })();

  pendingTranslations.set(key, doTranslate);
  try {
    const result = await doTranslate;
    return result;
  } finally {
    pendingTranslations.delete(key);
  }
}

   
